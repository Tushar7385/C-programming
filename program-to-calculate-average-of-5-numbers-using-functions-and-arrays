
#include <stdio.h>

void average(int[]);
int main()
 {
    int a[5];
    printf("\nGoing to calculate the average of 5 numbers:");
         printf("\nEnter five numbers");
         for(int i=0;i<5;i++)
                  scanf("%d",&a[i]);
         average(a);
 }
  void average(int a[])
  { 
        float avg,sum;
        for(int i=0;i<5;i++)
                sum=sum+a[i];
                
        avg=sum/5;
        printf("The average of given five numbers : %f",avg);
        
  }   
